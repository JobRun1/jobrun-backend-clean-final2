 export interface SentinelGuardResult {
   allowed: boolean;
   category: string;
   reason: string;
+  allowOverride?: boolean;
 }
+
+function outboundWhitelist(message: string): boolean {
+  if (message.includes("https://")) return true;
+
+  const safe = [
+    "book",
+    "booking",
+    "schedule",
+    "appointment",
+    "thanks for",
+    "help you",
+  ];
+
+  return safe.some(p => message.toLowerCase().includes(p));
+}
+
+export async function runOutboundSentinelGuard(params: SentinelGuardParams) {
+  if (outboundWhitelist(params.messageText)) {
+    return {
+      allowed: true,
+      category: "WHITELIST",
+      reason: "outbound business message",
+      allowOverride: true,
+    };
+  }
+
+  const result = await runSentinelGuard(params);
+
+  if (!result.allowed && !["SCAM","SPAM","ABUSIVE","INJECTION"].includes(result.category)) {
+    return { allowed: true, category: "OVERRIDDEN", reason: "non-dangerous" };
+  }
+
+  return result;
+}
