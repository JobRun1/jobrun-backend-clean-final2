{
  "name": "jobrun-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prebuild": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true}); console.log('âœ… dist/ nuked')\"",
    "build:prisma": "prisma generate",
    "build:tsc": "tsc",
    "build": "npm run build:prisma && npm run build:tsc",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:fix": "node scripts/migrate-with-retry.js",
    "start": "node dist/index.js",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
    "seed:prod": "ts-node -r tsconfig-paths/register prisma/seed-production.ts",
    "test": "jest",
    "test:endpoints": "jest twilio-endpoints.test.ts",
    "verify": "bash scripts/verify-deployment.sh",
    "predeploy": "npm run verify",
    "prepare": "cd ../.. && husky apps/backend/.husky"
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register scripts/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@types/stripe": "^8.0.416",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "openai": "^4.77.3",
    "stripe": "^20.1.0",
    "twilio": "^5.10.6",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.0",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prisma": "5.22.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
